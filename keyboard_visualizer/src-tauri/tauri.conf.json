{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/tooling/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../",
    "distDir": "../"
  },
  "package": {
    "productName": "Atajos de Teclado",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "readFile": true,
        "scope": ["**"]
      },
      "path": {
        "all": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.keyboard.visualizer",
      "shortDescription": "Visualizador de atajos de teclado",
      "targets": "all",
      "windows": {
        "webviewInstallMode": {
          "type": "downloadBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "resizable": true,
        "title": "Atajos de Teclado",
        "width": 900,
        "decorations": true,
        "center": true
      }
    ]
  }
} 